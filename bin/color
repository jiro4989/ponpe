#!/bin/bash

set -eu

readonly SCRIPT_NAME=$(basename $0)
readonly VERSION="$SCRIPT_NAME version 1.0.1
Copyright (c) 2019 jiro4989
Released under the MIT License.
https://github.com/jiro4989/scripts"

color_1() {
  local prefix=$1
  for i in $(seq 0 7); do
    echo -ne "\x1b[${prefix}${i}m  \\\\x1b[${prefix}${i}m  \x1b[m"
    if [ $(( (i+1) % 8)) -eq 0 ]; then
      echo
    fi
  done
}

color_256() {
  local prefix=$1
  for i in $(seq 0 255); do
    n=$(printf %03d $i)
    echo -ne "\x1b[${prefix};5;${n}m  \\\\x1b[${prefix};5;${n}m  \x1b[m"
    if [ $(( (i+1) % 8)) -eq 0 ]; then
      echo
    fi
  done
}

# 前景色の変更 (8色)
1f() {
  color_1 3
}

# 背景色の変更 (8色)
1b() {
  color_1 4
}

# 前景色の変更 (256色)
256f() {
  color_256 38
}

# 背景色の変更 (256色)
256b() {
  color_256 48
}

usage() {
  cat << EOS
$SCRIPT_NAME はLinuxターミナルの色を出力する。

Usage:
    $SCRIPT_NAME (1f | 1b | 256f | 256b)...
    $SCRIPT_NAME (-h | --help)
    $SCRIPT_NAME (-v | --version)

Options:
    -h, --help       このヘルプを出力する
    -v, --version    バージョン情報を出力する
EOS
}

cnt=0
while (( 0 < $# )); do
  opt=$1
  shift
  case "$opt" in
    -h|--help)
      usage
      exit
      ;;
    -v|--version)
      echo -e "$VERSION"
      exit
      ;;
    1f|1b|256f|256b)
      $opt
      cnt=$((cnt+1))
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

if [ "$cnt" -lt 1 ]; then
  echo "[ERR] 引数は必須です" >&2
  echo
  usage
  exit 1
fi
